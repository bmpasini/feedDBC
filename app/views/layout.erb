    See: http://necolas.github.com/normalize.css/
  -->
  <link rel="stylesheet" href="/css/normalize.css">
  <!--
    application.css is where you put your styles
  -->
  <link rel="stylesheet" href="/css/application.css">
  <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.1/jquery-ui.js"></script>

  <script src="/js/application.js"></script>

  <title>feeDBC</title>
</head>
<body>
  <nav>
    <% if current_user %>
      <ul>
        <li><strong><a href="/">fee<span>DBC</span></a></strong></li>
        <li><a href='/posts/new'>
          <button type="button">submit</button>
        </a></li>

        <li><span>Be actionable, specific, and kind</span></li>

        <div style="float:right">

          <li id="current_user"><%= current_user.username %></li>
          <li id="signup_button">
            <form name="input" action="/logout" method="get">
              <button type="submit" name="logout">logout</button>
            </form>
          </li>
          <li>
        </div>
        
      </ul>
    <% else %>
      <ul>
        <li><strong><a href="/">fee<span>DBC</span></a></strong></li>
        <li id="submit_buton">
          <button type="button" name="login">submit</button>
        </li>

        <li><span>Be actionable, specific, and kind</span></li>

        <div style="float:right">

          <li id="current_user">
            <button type="submit" name="login">login</button>
          </li>
          <li id="signup_button">
            <button type="submit" name="signup">signup</button>
          </li>
          <li>
        </div>
      </ul>
    <% end %>
  </nav>

<!--   <center><h2> Be actionable, specific, and kind. </h2></center> -->

  <!-- Hidden Signup -->
  <div class="row-submit" id="signupStudent" style="display: none;">
    <h3>Sign Up</h3>

    <form name="signup" action="/signup" method="post">
      <input type="text" name="user[username]" placeholder="username"/><br>
      <br>
      <input type="text" name="user[email]" placeholder="email"/><br>
      <br>
      <input type="password" name="user[password]" placeholder="password"/><br>
      <br>
      <button type="submit" name="signup_submit">signup</button>
    </form>
  </div>


  <!-- Hidden Login -->
  <div class="row-submit" id="loginStudent" style="display: none;">
    <h3>Login</h3>

    <form name="login" action="/login" method="post">
      <input type="text" name="username" placeholder="username"/><br>
      <br>
      <input type="password" name="password" placeholder="password"/><br>
      <br>
      <button type="submit" name="login_submit">login</button>
    </form>
  </div>

  <%= yield %>
</body>
</html>


